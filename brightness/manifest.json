{

  "manifest_version": 2,
  "name": "Brightness-changer",
  "version": "1.0.0",

  "description": "Changes the brightness of the page.",

  "icons": {
   "48": "icons/brightness.png"
 },

  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ "content_script.js" ]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "48": "icons/brightness.png"
  },
  "default_title": "Brightness-changer",
  "default_popup": "popup.html"
},

  "permissions": [
    "storage"
  ]
}
